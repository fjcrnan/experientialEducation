page {
  background-color: #f4f2f5;
}
.fakeContainer {
  width: 100%;
  height: 116rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fakeSearchInput {
  width: 93%;
  height: 72rpx;
  background-color: #f7f8fa;
  color: #c8c9cc;
  display: flex;
  align-items: center;
  padding-left: 14rpx;
  font-size: 28rpx;
}
.realInput {
  flex: 9;
}
.realSearchInput {
  flex-direction: row;
  display: flex;
  align-items: center;
  color: white;
  background-color: #03c0ad;
}
.realCancel {
  background-color: #03c0ad;
  flex: 1;
  padding-bottom: 10rpx;
  padding-right: 8rpx;
}
.orderLists {
  margin-top: 20rpx;
}
.orderLists .orderheader {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.orderLists .orderheader .state {
  margin-left: 40rpx;
  font-weight: 550;
}
.orderLists .orderheader .oddNumer {
  color: var(--ScondarytextColor);
  margin-left: 50rpx;
  font-size: 25rpx;
}
.orderLists .divider .van-divider {
  margin: 0 !important;
}
.orderLists .detail {
  background-color: #fff;
  position: relative;
}
.orderLists .detail .descClass {
  color: var(--ScondarytextColor);
  display: flex;
  flex-direction: column;
}
.orderLists .detail .tagsName {
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}
.orderLists .detail .tagsName .base {
  display: flex;
  flex-wrap: wrap;
}
.orderLists .detail .tagsName .base van-tag {
  margin-top: 5rpx;
}
.orderLists .detail .orderTime {
  color: var(--ScondarytextColor);
  width: 100%;
  display: flex;
  flex-direction: row;
}
.orderLists .detail .orderTime .curriPrice {
  flex: 2;
  color: red;
  font-size: 28rpx;
  font-weight: bold;
}
.orderLists .detail .orderTime .curriTime {
  flex: 8;
  text-align: right;
}
.orderLists .detail .buyerInfor .van-divider {
  margin: 10rpx 0 !important;
}
.orderLists .detail .buyerInfor .schName {
  margin-left: 100rpx;
}
.orderLists .detail .buyerInfor .phoneNum {
  margin-left: 65rpx;
}
.orderLists .detail .footerButton {
  width: 100%;
  height: 80rpx;
}
.orderLists .detail .footerButton .van-divider {
  margin: 10rpx 0rpx !important;
}
.orderLists .detail .tagList {
  margin-left: 5rpx;
}
.noticeInfor {
  text-align: center;
}
