.realInput {
  flex: 9;
}
.realSearchInput {
  flex-direction: row;
  display: flex;
  align-items: center;
  color: white;
  background-color: #03c0ad;
}
.realCancel {
  background-color: #03c0ad;
  flex: 1;
  padding-bottom: 10rpx;
  padding-right: 8rpx;
}
.searchRecord {
  margin: 20rpx auto;
  background-color: #f4f2f5;
  /* background-color: red; */
  width: 94%;
  font-size: 26rpx;
  height: calc(100vh - 108rpx - 40rpx);
  z-index: 9;
}

.searchRecord .recordBar {
  display: flex;
  height: 60rpx;
  background-color: #fff;
  padding: 0 18rpx;
}

.searchRecord .recordBar .recordText {
  margin-top: 20rpx;
  font-weight: bold;
  flex: 1;
  text-align: left;
}

.searchRecord .recordBar .clearRecord {
  display: flex;
  align-items: center;
  color: #d6cdcc;
}

.allRecords {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}

.allRecords .records {
  height: 50rpx;
  background-color: #f4f2f5;
  border-radius: 20rpx;
  margin: 20rpx;
  padding: 10rpx;
  display: flex;
  align-items: center;
  min-width: 60rpx;
  justify-content: center;
}